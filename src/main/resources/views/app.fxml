<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="savvy.ui.app.AppController"
          alignment="center"
          hgap="10"
          vgap="10"
          gridLinesVisible="false"

>
    <!-- ^ gridLinesVisible="true" to see layout grid lines -->
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <fx:include source="fact_create.fxml"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
    />

    <Separator
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"
    />

    <fx:include source="facts_list.fxml"
                GridPane.rowIndex="2"
                GridPane.columnIndex="0"
                visible="true"
    />

    <Separator
            GridPane.rowIndex="3"
            GridPane.columnIndex="0"
    />


    <fx:include source="relationships_list.fxml"
                GridPane.rowIndex="4"
                GridPane.columnIndex="0"
                visible="true"
    />

    <fx:include source="entities_list.fxml"
                GridPane.rowIndex="5"
                GridPane.columnIndex="0"
                visible="true"
    />


    <!-- messages for application operations -->
    <VBox spacing="2"
          GridPane.rowIndex="6"
          GridPane.columnIndex="0"
    >
        <Text fx:id="txt_msg"
              fill="firebrick"/>
    </VBox>


</GridPane>
