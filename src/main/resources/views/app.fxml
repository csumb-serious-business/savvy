<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.RowConstraints?>

<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="savvy.ui.app.AppController"
          alignment="center"
          hgap="10"
          vgap="10"
          minWidth="800"
          minHeight="-Infinity"
          gridLinesVisible="false"

>
    <!-- ^ gridLinesVisible="true" to see layout grid lines -->

    <stylesheets>
        <URL value="@/styles/styles.css"/>
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <TabPane
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            tabClosingPolicy="UNAVAILABLE"
            side="BOTTOM"
    >

            <!-- Facts Tab -->
            <Tab text="Facts">
                <VBox>
                <fx:include source="fact_create.fxml"/>
                <Separator/>
                <fx:include source="facts_list.fxml"/>
                </VBox>
            </Tab>

            <!-- Entities Tab -->
            <Tab text="Entities">
                <fx:include source="entities_list.fxml"/>
            </Tab>

            <!-- Relationships Tab -->
            <Tab text="Relationships">
                <fx:include source="relationships_list.fxml"/>
            </Tab>
            <!-- -->
    </TabPane>

    <!-- messages for application operations -->
    <VBox spacing="2"
          GridPane.rowIndex="1"
          GridPane.columnIndex="0"
          styleClass="app-msg"
    >
        <Text fx:id="txt_app_msg"
              fill="firebrick"/>
    </VBox>
</GridPane>
