<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.RowConstraints?>

<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      id="vBox"
      fx:controller="savvy.ui.app.AppController">

    <fx:include source="menu_bar.fxml"/>

    <stylesheets>
        <URL value="@/styles/styles.css"/>
    </stylesheets>

    <GridPane
            alignment="center"
            hgap="10"
            vgap="10"
            gridLinesVisible="false"
    >
        <!-- ^ gridLinesVisible="true" to see layout grid lines -->
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>

        <TabPane
                fx:id="tabs"
                GridPane.rowIndex="0"
                GridPane.columnIndex="0"
                tabClosingPolicy="UNAVAILABLE"
                side="BOTTOM"
        >

            <!-- Facts Tab -->
            <Tab text="Facts"
                 fx:id="tab_facts"
            >
                <VBox>
                    <fx:include source="fact_create.fxml"/>
                    <Separator/>
                    <fx:include source="facts_list.fxml"/>
                </VBox>
            </Tab>

            <!-- Entities Tab -->
            <Tab text="Entities"
                 fx:id="tab_entities"
            >
                <fx:include source="entities_list.fxml"/>
            </Tab>

            <!-- Relationships Tab -->
            <Tab text="Relationships"
                 fx:id="tab_relationships"
            >
                <fx:include source="relationships_list.fxml"/>
            </Tab>
            <!-- -->
        </TabPane>

        <!-- messages for application operations -->
        <VBox spacing="2"
              GridPane.rowIndex="1"
              GridPane.columnIndex="0"
              styleClass="app-msg"
        >
            <Text fx:id="txt_app_msg"
                  fill="firebrick"/>
        </VBox>
    </GridPane>
</VBox>
